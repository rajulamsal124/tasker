{
  "name": "tasker",
  "version": "1.0.0",
  "description": "A CLI application to track and manage tasks.",
  "main": "main.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/main.js",
    "dev": "ts-node src/main.ts",
    "dev:watch": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/main.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  },
  "keywords": [
    "task-tracker",
    "CLI",
    "task management",
    "typescript",
    "jest"
  ],
  "author": "Raju Lamsal",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.7",
    "jest": "^27.3.1",
    "nodemon": "^3.1.7",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "@types/uuid": "^10.0.0",
    "express": "^4.21.1",
    "uuid": "^10.0.0"
  }
}
